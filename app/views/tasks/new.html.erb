<h1>Add a task</h1>

<%= form_for [:task_list, @task], html: {class: "add_task"} do |f| %>
  <div class="errors">
  </div>
  <ul class="form_list">
    <li>
      <%= f.label :description %>
    </li>
    <li class="text">
      <%= f.text_field :description, autofocus: true %>
    </li>
    <li>
      <%= f.label :date %>
    </li>
    <li>
      <%= f.text_field :date, class: "cal-date" %>
    </li>
    <li>
      <%= f.label :user %>
    </li>
    <li>
      <%= f.select :assigned_to, @users, include_blank: '' %>
    </li>
    <li>
      <div>
        <%= f.submit "Create Task", class: "button submit" %>
      </div>
    </li>
  </ul>
<% end %>
<%= link_to "Clear Form", url: "javascript:void(0)", class: "button clear" %>
