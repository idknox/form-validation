<h1>Add a task</h1>

<%= form_for [:task_list, @task] do |f| %>
  <% f.object.errors.each do |attr, msg| %>
    <div class="errors">
      <%= msg %>
    </div>
  <% end %>
  <ul class="form_list">
    <li>
      <%= f.label :description %>
    </li>
    <li class="text">
      <%= f.text_field :description, autofocus: true %>
    </li>
    <li>
      <%= f.label :date %>
    </li>
    <li>
      <%= f.text_field :date, class: "cal-date" %>
    </li>
    <li>
      <%= f.label :user %>
    </li>
    <li>
      <%= f.select :assigned_to, @users, include_blank: "" %>
    </li>
    <li>
      <div>
        <%= f.submit "Create Task", class: "button" %>
      </div>
    </li>
  </ul>
<% end %>