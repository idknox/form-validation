<h1>Add a task</h1>

<%= form_for @task, url: "", html: { class: "add_task"} do |f| %>
  <% f.object.errors.full_messages.each do |error| %>
    <div class="errors">
      <%= error %>
    </div>
  <% end %>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description, autofocus: true %>
  </div>
  <div>
    <%= f.label :due_date %>
    <%= f.date_select :date %>
  </div>
  <div>
    <%= f.submit "Create Task" %>
  </div>
<% end %>