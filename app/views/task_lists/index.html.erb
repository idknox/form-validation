<h1>My Lists</h1>
<%= link_to "Add Task List", new_task_list_path %>
<% if flash[:notice] %>
  <div class="errors">
    <%= flash[:notice] %>
  </div>
<% end %>
<% @task_lists.each do |task_list| %>
  <section class="task-list">
    <h1><%= link_to task_list.name, task_list_path(task_list.id) %></h1>
    <%= link_to "Edit", edit_task_list_path(task_list.id) %>
    <%= link_to "Add Task", new_task_list_task_path(task_list.id) %>
    <ul>
    <% @tasks.each do |task| %>
      <% if task.task_list_id == task_list.id %>
        <li>
          <%= task.description + " (" + (task.date.mjd - Date.today.mjd).to_s + " days)" %>
        </li>
        <%= form_for [task_list, task], method: :delete do |f| %>
          <div>
            <%= f.submit "Delete" %>
          </div>
        <% end %>
      <% end %>
    <% end %>
      </ul>
  </section>
<% end %>